<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/view_image"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_width="415dp"
        android:layout_height="175dp"
        />

    <TextView
        android:id="@+id/view_name"
        android:text="@string/image_name"
        android:layout_weight="0.05"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_image_name"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_uri"
        android:layout_weight="0.1"
        android:text="@string/text_uri"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_image_uri"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_image_description"
        android:text="@string/image_description"
        android:layout_weight="0.05"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_weight="0.5"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>